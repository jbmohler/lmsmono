{
  "name": "lms-frontend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "ng": "ng",
    "build:css": "tailwindcss --cwd src -i styles.css -o styles.built.css",
    "watch:css": "tailwindcss --cwd src -i styles.css -o styles.built.css --watch",
    "start": "pnpm build:css && concurrently \"pnpm watch:css\" \"ng serve --host 0.0.0.0 --port 4200\"",
    "build": "pnpm build:css && ng build",
    "test": "vitest",
    "lint": "eslint src/",
    "knip": "knip"
  },
  "dependencies": {
    "@angular/animations": "^21.0.0",
    "@angular/cdk": "^21.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-browser-dynamic": "^21.0.0",
    "@angular/router": "^21.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.8.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@eslint/js": "^9.0.0",
    "@tailwindcss/cli": "^4.1.18",
    "@types/node": "^22.0.0",
    "angular-eslint": "^19.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "knip": "^5.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.9.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.0.0"
  }
}
